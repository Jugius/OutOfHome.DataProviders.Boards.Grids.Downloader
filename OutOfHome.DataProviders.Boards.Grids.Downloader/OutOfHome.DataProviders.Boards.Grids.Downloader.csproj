<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net7.0;net8.0</TargetFrameworks>
	<LangVersion>latest</LangVersion>
    <ImplicitUsings>enable</ImplicitUsings>
	<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <RootNamespace>OutOfHome.DataProviders.Boards.Grids.Downloader</RootNamespace>
    <AssemblyName>OohelpSoft.OutOfHome.DataProviders.Boards.Grids.Downloader</AssemblyName>

	  <Version>1.7.3</Version>
	  <Authors>OoHelp.Net</Authors>
	  <Company>OoHelp.Net</Company>
	  <PackageId>$(AssemblyName)</PackageId>
	  <Copyright>OoHelp.Net</Copyright>
	  <Description>Библиотека загрузки сеток занятости основных OOH операторов (Украина)</Description>
	  <PackageLicenseExpression>MIT</PackageLicenseExpression>
	  <RepositoryUrl>https://github.com/Jugius/OutOfHome.DataProviders.Boards.Grids.Downloader.git</RepositoryUrl>
	  <RepositoryType>git</RepositoryType>
  </PropertyGroup>

  <ItemGroup>
    <None Remove=".gitattributes" />
    <None Remove=".gitignore" />
    <None Remove="README.md" />
  </ItemGroup>

  <ItemGroup>    
	  <EditorConfigFiles Remove=".editorconfig" />
  </ItemGroup>

  <ItemGroup>    
	  <None Include=".editorconfig" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="EPPlus" Version="7.1.2">
      <PrivateAssets>compile</PrivateAssets>
    </PackageReference>
    <PackageReference Include="PuppeteerSharp" Version="17.0.0">
		<PrivateAssets>compile</PrivateAssets>
	</PackageReference>
  </ItemGroup>

</Project>
